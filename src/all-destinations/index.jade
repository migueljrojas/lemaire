extends ../_layouts/base

include ../_modules/hero/hero
include ../_modules/dropdown/dropdown
include ../_modules/slider/slider

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.destinations
        +hero(site.data.destinations.hero.title, site.data.destinations.hero.desc, site.data.destinations.hero.img)
            each item in site.data.destinations.content
                p= item
            
            h2 All our destinations
            .item-list
                each item in site.data.destinations.list
                    .item-list__item
                        .item-list__slider-col
                            +slider('item-list__slider')
                                each photo in item.photos
                                    .item-list__slide
                                        img(src=photo)
                                        
                        .item-list__data-col
                            h3= item.name
                            p= item.desc
