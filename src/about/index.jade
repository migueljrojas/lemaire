extends ../_layouts/base

include ../_modules/hero/hero

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.about.bg-secondary
        +hero(site.data.about.hero.title, site.data.about.hero.desc, site.data.about.hero.img)
            each item in site.data.about.content
                if item.type == "title"
                    h2= item.cont
                if item.type == "subtitle"
                    h3= item.cont
                if item.type == "list"
                    ul
                        each bullet in item.cont
                            li= bullet
                if item.type == "text"
                    each p in item.cont
                        p= p
                            
    
